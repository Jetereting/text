<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    android:orientation="vertical"
    tools:context="eiyou.us.text.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:text="Welcome "
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/gang_gang"
        />
    <!-- 用户头像-->
    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tv_back"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/user_avatar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/iv_user_avatar"
        android:orientation="horizontal"
        android:id="@+id/zhanghao">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text="账号："
            android:textColor="#ff5f5f5f"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/ed_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_weight="0.45"
            android:background="@drawable/abc_edit_text_material"
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/mima"
        android:layout_below="@+id/zhanghao"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text="密码："
            android:textColor="#ff5f5f5f"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/ed_user_psd"
            android:layout_width="wrap_content"
            android:background="@drawable/abc_edit_text_material"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_weight="0.45"
            android:inputType="textPassword"
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="20dp" />
    </LinearLayout>
    <!--密码-->
    <Button
        android:id="@+id/b_login"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="登  录"
        android:textColor="#FFFFFFFF"
        android:textSize="24sp"
        android:layout_below="@+id/mima"
        android:background="@drawable/login_button_back"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="22dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tv_forget_psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textColor="#ff3090e8"
            android:textSize="17sp"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/tv_new_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新用户 "
            android:layout_alignParentRight="true"
            android:textColor="#ff3292ee"
            android:layout_alignParentBottom="true"
            android:textSize="17sp" />

    </RelativeLayout>

</RelativeLayout>
