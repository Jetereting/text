<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    android:orientation="vertical"
    tools:context="eiyou.us.text.LoginActivity">

    <!--&lt;!&ndash;<TextView&ndash;&gt;-->
        <!--&lt;!&ndash;android:id="@+id/tv_title"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_width="fill_parent"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_height="40dp"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_marginTop="10dp"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_marginLeft="40dp"&ndash;&gt;-->
        <!--&lt;!&ndash;android:text="快速注册"&ndash;&gt;-->
        <!--&lt;!&ndash;android:textSize="24sp" />&ndash;&gt;-->
    <!--<Button-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:background="@drawable/youjian"/>-->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="41dp"
        android:src="@drawable/user_avatar" />

    <LinearLayout
        android:layout_below="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/zczh"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text="   账号     ："
            android:textColor="#ff5f5f5f"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ed_user_name0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_weight="0.45"
            android:background="@drawable/abc_edit_text_material"
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zcmm"
        android:layout_below="@+id/zczh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text="   密码     ："
            android:textColor="#ff5f5f5f"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ed_user_psd0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_weight="0.45"
            android:background="@drawable/abc_edit_text_material"
            android:inputType="textPassword"
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="22dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qrmm"
        android:layout_below="@+id/zcmm"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:gravity="center"
            android:text="确认密码："
            android:textColor="#ff5f5f5f"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ed_user_psd_again0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_weight="0.26"
            android:inputType="textPassword"
            android:background="@drawable/abc_edit_text_material"
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="22dp" />
    </LinearLayout>

    <Button
        android:id="@+id/b_register"
        android:layout_width="400px"
        android:layout_height="80px"
        android:layout_below="@+id/qrmm"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_button_back"
        android:layout_centerHorizontal="true"
        android:text="注 册"
        android:textSize="22sp" />
</RelativeLayout>
