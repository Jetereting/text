<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/edit_info_background">

    <RelativeLayout
        android:id="@+id/bianjikuang"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#17b4eb">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_cancel"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_save"
            android:layout_centerHorizontal="true"
            android:text="编辑资料"
            android:textColor="#ffffff"
            android:textSize="17dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="32dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="个人说明:"
            android:textColor="#2dff02"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/ed_user_instruction"
            android:layout_width="230dp"
            android:textColor="#2dff02"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="32dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="联系方式:"
            android:textColor="#2dff02"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/ed_user_tel"
            android:layout_width="230dp"
            android:textColor="#2dff02"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="32dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="个人邮箱:"
            android:textColor="#2dff02"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/ed_user_mail"
            android:layout_width="230dp"
            android:textColor="#2dff02"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="32dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="    爱好:    "
            android:textColor="#2dff02"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/ed_user_hobby"
            android:layout_width="230dp"
            android:textColor="#2dff02"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>